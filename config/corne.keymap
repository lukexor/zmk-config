#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

// Convenience maps
#define XXX &none
#define ___ &trans

// Layers
#define _BASE 0
#define _EXT 1
#define _NUM 2
#define _SYM 3
#define _FN  4
#define _GAME 5
#define _LINX 6

// Layer Taps
#define _E(key) &lt _EXT key
#define _N(key) &lt _NUM key
#define _S(key) &lt _SYM key
#define _F(key) &lt _FN key

// Layer Toggles
#define _TB &to _BASE
#define _TG &to _GAME

// Tap-dance
#define TD(k1, k2) &td k1 k2

// Home-row Mods
#define HLG(k) &hm LGUI k
#define HRG(k) &hm RGUI k
#define HLA(k) &hm LALT k
#define HRA(k) &hm RALT k

// Mod-taps
#define MLC(k) &mt LCTRL k
#define MRC(k) &mt RCTRL k
#define MLS(k) &mt LSHFT k
#define MRS(k) &mt RSHFT k

// Meh Mod-tap
#define MLM(k) &mt LC(LS(LALT)) k
#define MRM(k) &mt RC(RS(RALT)) k

// Hyper Mod-tap
#define MLH(k) &mt LC(LS(LA(LGUI))) k
#define MRH(k) &mt RC(RS(RA(RGUI))) k

// Modifier combos
#define LCS(k) LC(LS(k))
#define LAS(k) LA(LS(k))

&mt {
    flavor = "tap-preferred";
    tapping_term_ms = <200>;
};

