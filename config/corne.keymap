// clang-format off
/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

        td: tapdance {
            compatible = "zmk,behavior-hold-tap";
            label = "TAPDANCE";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            label = "base";
            bindings = <
            //┌─────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┐  ┌─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────┐
            //│     │ Q           │ W           │ F           │ P           │ B           │  │ J           │ L           │ U           │ Y           │ '           │     │
                XXX   &kp Q         &kp W         &kp F         &kp P         &kp B            &kp J         &kp L         &kp U         &kp Y         &kp SQT       XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  │─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ A           │ R           │ S 󰘵         │ T 󰘳         │ G           │  │ M           │ N 󰘳         │ E 󰘵         │ I           │ O           │     │
                XXX   &kp A         &kp R         HLA(S)        HLG(T)        &kp G            &kp M         HRG(N)        HRA(E)        &kp I         &kp O         XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ Z           │ X           │ C           │ D           │ V           │  │ K           │ H           │ , <         │ . >         │ / ?         │     │
                XXX   &kp Z         &kp X         &kp C         &kp D         &kp V            &kp K         &kp H         &kp COMMA     &kp DOT       &kp SLASH     XXX
            //└─────────────────────────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────────────────────────┤
            //                                  │ ESC         │ ␣           │ 󰘶           │  │ 󰘴           │ 󰭜           │ - _         │
                                                  _E(ESC)       _S(SPACE)     &sk LSHFT        &sk RCTRL     _N(BSPC)       _F(MINUS)
            //                                  └─────────────┴─────────────┴─────────────┘  └─────────────┴─────────────┴─────────────┘
            >;
        };

        ext {
            label = "extend";
            bindings = <
            //┌─────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┐  ┌─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────┐
            //│     │             │             │             │             │             │  │ CAPS WORD   │             │             │             │             │     │
                XXX   XXX           XXX           XXX           XXX           XXX              &caps_word    XXX           XXX           XXX           XXX           XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  │─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ 󰘵           │ 󰘳           │ 󰘶           │ 󰘴           │ 󰘵           │  │ ←           │ ↓           │ ↑           │ →           │             │     │
                XXX   &sk LALT      &sk LGUI      &sk LSHFT     &sk LCTRL     &sk RALT         &kp LEFT      &kp DOWN      &kp UP        &kp RIGHT     XXX           XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ 󰘳-Z (UNDO)  │ 󰘳-X (CUT)   │ 󰘳-C (COPY)  │ 󰘳           │ 󰘳-V (PASTE) │  │ ⇱           │ ⇟           │ ⇞           │ ⇲           │             │     │
                XXX   &kp LG(Z)     &kp LG(X)     &kp LG(C)     &kp LGUI      &kp LG(V)        &kp HOME      &kp PGDN      &kp PGUP      &kp END       XXX           XXX
            //└─────────────────────────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────────────────────────┤
            //                                  │             │             │             │  │ ⇥           │ ⏎           │ 󰹿           │
                                                  ___           XXX           XXX              &kp TAB       &kp RET       &kp DEL
            //                                  └─────────────┴─────────────┴─────────────┘  └─────────────┴─────────────┴─────────────┘
            >;
        };

        num {
            label = "num";
            bindings = <
            //┌─────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┐  ┌─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────┐
            //│     │             │             │             │             │             │  │ =           │ 7           │ 8           │ 9           │ +           │     │
                XXX   XXX           XXX           XXX           XXX           XXX              &kp EQUAL     &kp N7        &kp N8        &kp N9        &kp PLUS      XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  │─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ 󰘵           │ 󰘳           │ 󰘶           │ 󰘴           │ 󰘵           │  │ *           │ 4           │ 5           │ 6           │ -           │     │
                XXX   &sk LALT      &sk LGUI      &sk LSHFT     &sk LCTRL     &sk RALT         &kp ASTRK     &kp N4        &kp N5        &kp N6        &kp MINUS     XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │             │             │             │             │             │  │ 0           │ 1           │ 2           │ 3           │ /           │     │
                XXX   XXX           XXX           XXX           XXX           XXX              &kp N0        &kp N1        &kp N2        &kp N3        &kp FSLH      XXX
            //└─────────────────────────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────────────────────────┤
            //                                  │             │             │             │  │             │             │             │
                                                  XXX           XXX           XXX              XXX           ___           XXX
            //                                  └─────────────┴─────────────┴─────────────┘  └─────────────┴─────────────┴─────────────┘
            >;
        };

        sym {
            label = "sym";
            bindings = <
            //┌─────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┐  ┌─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────┐
            //│     │ !           │ @           │ # SCR_CAP   │ $           │ %           │  │ =           │ `           │ :           │ ;           │ +           │     │
                XXX   &kp EXCL      &kp AT      TD(LCS(P), HASH) &kp DLLR     &kp PRCNT        &kp EQUAL     &kp GRAVE     &kp COLON     &kp SEMI      &kp PLUS      XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  │─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ 󰘵           │ 󰘳           │ 󰘶           │ 󰘴           │ ^           │  │ *           │ (           │ {           │ [           │ -           │     │
                XXX   &sk LALT      &sk LGUI      &sk LSHFT     &sk LCTRL     &kp CARET        &kp ASTRK     &kp LPAR      &kp LBRC      &kp LBKT      &kp MINUS     XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │             │             │ \           │ |           │ &           │  │ ~           │ )           │ }           │ ]           │ _           │     │
                XXX   XXX           XXX           &kp BSLH      &kp PIPE      &kp AMPS         &kp TILDE     &kp RPAR      &kp RBRC      &kp RBKT      &kp UNDER     XXX
            //└─────────────────────────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────────────────────────┤
            //                                  │             │             │             │  │             │             │             │
                                                  XXX           ___           XXX              XXX           XXX           XXX
            //                                  └─────────────┴─────────────┴─────────────┘  └─────────────┴─────────────┴─────────────┘
            >;
        };

        fn {
            label = "fn";
            bindings = <
            //┌─────┬─────────────┬─────────────┬─────────────┬─────────────┬─────────────┐  ┌─────────────┬─────────────┬─────────────┬─────────────┬─────────────┬─────┐
            //│     │            │ 󰒮           │ 󰐎           │ 󰒭           │ 🔆          │  │ F12         │ F7          │ F8          │ F9          │ _BASE       │     │
                XXX   &kp C_STOP    &kp C_PREV    &kp C_PP      &kp C_NEXT    &kp C_BRI_UP     &kp F6        &kp F7        &kp F8        &kp F9        _TB           XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  │─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │ 󰘵           │ 󰘳           │ 󰘶           │ 󰘴           │ 🔅          │  │ F11         │ F4          │ F5          │ F6          │ _GAME       │     │
                XXX   &sk LALT      &sk LGUI      &sk LSHFT     &sk LCTRL     &kp C_BRI_DN     &kp F11       &kp F4        &kp F5        &kp F6        _TG           XXX
            //├─────┼─────────────┼─────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────┼─────────────┼─────┤
            //│     │            │            │            │             │ BT CLEAR    │  │ F10         │ F1          │ F2          │ F3          │             │     │
                XXX   &kp C_MUTE    &kp C_VOL_DN  &kp C_VOL_UP  XXX           &bt BT_CLR       &kp F10       &kp F1        &kp F2        &kp F3        XXX           XXX
            //└─────────────────────────────────┼─────────────┼─────────────┼─────────────┤  ├─────────────┼─────────────┼─────────────┼─────────────────────────────────┤
            //                                  │ BT 0        │ BT 1        │ BT 2        │  │             │             │             │
                                                  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2     XXX           XXX           ___
            //                                  └─────────────┴─────────────┴─────────────┘  └─────────────┴─────────────┴─────────────┘
            >;
        };
    };
};
